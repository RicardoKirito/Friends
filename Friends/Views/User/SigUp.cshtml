@using Friends.Core.Application.ViewModels.User;
@model SaveUserViewModel

<div class="card border-2 p-5 shadow glass">
<form method="post" enctype="multipart/form-data"  asp-controller="User" asp-action="SigUp">
    <div>
        <label for="Name" asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Name"> </span>
    </div>
    <div>
        <label for="LastName" asp-for="LastName">Last name</label>
        <input asp-for="LastName" class="form-control" />
        <span class="text-danger" asp-validation-for="Name"> </span>
    </div>
    <div>
        <label for="Phone" asp-for="Phone">Phone number</label>
        <input asp-for="Phone" class="form-control" />
        <span class="text-danger" asp-validation-for="Phone"> </span>
    </div>
    <div>
        <label for="Email" asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
        <span class="text-danger" asp-validation-for="Email"> </span>
    </div>
    <div>
        <label for="Picture" asp-for="Picture">Upload a profile picture</label>
        <input class="form-control" asp-for="Picture" />
        <span class="text-danger" asp-validation-for="Picture"> </span>
    </div>
    <div>
        <label for="UserName" asp-for="UserName">Username</label>
        <input asp-for="UserName" class="form-control" />
        <span class="text-danger" asp-validation-for="UserName"> </span>
    </div>
    <div>
        <label for="Password" asp-for="Password">Password</label>
        <input asp-for="Password" class="form-control" />
        <span class="text-danger" asp-validation-for="Password"> </span>
    </div>
    <div>
        <label for="ConfirmePassword" asp-for="ConfirmPassword">Confirm Passwrod</label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span class="text-danger" asp-validation-for="ConfirmPassword"> </span>
    </div>
    <input type="hidden" asp-for="Id" value="0" />
    <input type="hidden" asp-for="Imagepath" value="." />
    <div class="mt-3">
           <button type="submit" class="btn btn-primary ">Register</button>
           <a class="btn btn-outline-danger" asp-controller="User" asp-action="Login">Cancel</a>
    </div>
</form>
</div>